<!doctype html>
<html class="no-js" lang="PT-BR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Editor de Mapas para Brinquedos Program√°veis</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">

    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <!-- Place favicon.ico in the root directory -->

    <script src="js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body ng-app="ddApp">

<div id="spinner" class="spinner" style="display:none;">
    <img id="img-spinner" src="images/spinner.gif" alt="Loading"/>
</div>

<div ng-controller="ddController">

    <div class="row topo">
        <div class="cat" ng-repeat="categoria in categorias" data-nome="{{ categoria.nome }}" style="background-image: url('{{ categoria.imgUrl }}')" ng-click="selecionaCategoria(categoria.nome)" ></div>
    </div>

    <div class="row centro">
        <div class="col-xs-2 esquerda">
            <div style="z-index: 1">
                <div class="peg" ng-repeat="tile in tiles" data-id="{{ tile.id }}"  data-img="{{ tile.imgUrl }}" style="background-image: url('{{ tile.imgUrl }}')"
                     ng-drag="true" ng-drag-data="tile" data-allow-transform="true" ng-drag-start="onDragStart($data,$event)"></div>
            </div>
        </div>

        <div class="col-xs-8 direita">
            <div ng-repeat="row in cells track by $index">
                <div class="slot" ng-repeat="cell in row track by $index"
                     ng-drop="true" ng-drop-success="dropped($event)" ng-drag="true" ng-drag-data="tile"
                     data-id="0" data-img="null" data-deg="0"
                     ng-drag-start="onDragStart($data,$event)" >
                </div>
            </div>
            <div ng-show="false">
            <canvas id="mapa" width="{{ imagem.largura }}" height="{{ imagem.altura }}"></canvas>
            </div>
        </div>
        <div class="col-xs-2 direita">
            <div class="lixeira" ng-click="limpaTudo()" ng-drop-success="lixo($event)" ng-drop="true">
                <i class="material-icons" style="font-size: 5vw; cursor: pointer">delete</i>
            </div>

            <button class="btn btn-raised btn-warning" ng-click="sizeChange(true,false)"><i class="material-icons">keyboard_arrow_right</i></button>
            <button class="btn btn-raised btn-warning" ng-click="sizeChange(false,false)"><i class="material-icons">keyboard_arrow_left</i></button>

            <button class="btn btn-raised btn-warning"  ng-click="sizeChange(true,true)"><i class="material-icons">keyboard_arrow_down</i></button>
            <button class="btn btn-raised btn-warning" ng-click="sizeChange(false,true)"><i class="material-icons">keyboard_arrow_up</i></button>

        </div>

    </div>

    <div class="row fundo">
        <div class="col-xs-12">
            <a href="#" id="expJ" class="btn btn-raised rosa" download="mapa.json"><i class="material-icons">file_download</i> Exportar</a>
            <label for="impJ" class="btn btn-raised rosa">
                <i class="material-icons">file_upload</i> Importar
            </label>
            <input ng-show="false" type="file" id="impJ" />
            <a href="#" class="btn btn-raised rosa" id="expI"><i class="material-icons">image</i> Mapa</a>
        </div>
    </div>


</div>



<script src="js/JQuery/jquery-3.1.0.min.js"></script>
<script src="js/Framework/angular.min.js"></script>
<script src="js/Framework/angular-touch/angular-touch.js"></script>
<script src="js/AngularDnD/ngDraggable.js"></script>
<script src="js/Bootstrap/bootstrap.min.js"></script>
<script src="js/Material/material.min.js"></script>
<script src="js/plugins.js"></script>
<script src="js/main.js"></script>
</body>
</html>
