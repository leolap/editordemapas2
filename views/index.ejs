<!doctype html>
<html class="no-js" lang="PT-BR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Editor de Mapas para Brinquedos Program√°veis</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <!-- Place favicon.ico in the root directory -->

    <script src="js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body ng-app="ddApp">

<div id="spinner" class="spinner" style="display:none;">
    <img id="img-spinner" src="images/spinner.gif" alt="Loading"/>
</div>

<div ng-controller="ddController">

    <div class="row topo">
        <div class="col-xs-9">
            <div class="cat" ng-repeat="categoria in categorias" data-nome="{{ categoria.nome }}" style="background-image: url('{{ categoria.imgUrl }}')" ng-click="selecionaCategoria(categoria.nome)" ></div>
        </div>
        <div class="col-xs-3">
            <img class="maos" src="images/icones/tap-2.svg" />
        </div>
    </div>

    <div class="row centro">
        <div class="col-xs-2 esquerda">
            <div class="row">
                <div class="col-xs-offset-9 col-xs-3">
                    <img class="maos" src="images/icones/pointing-up-2.svg" />
                </div>
            </div>
            <div style="z-index: 1">
                <div class="peg" ng-repeat="tile in tiles" data-id="{{ tile.id }}"  data-img="{{ tile.imgUrl }}" style="background-image: url('{{ tile.imgUrl }}')"
                     ng-drag="true" ng-drag-data="tile" data-allow-transform="true" ng-drag-start="onDragStart($data,$event)"></div>
            </div>
        </div>

        <div class="col-xs-8 direita">
            <div ng-repeat="row in cells track by $index">
                <div class="slot" ng-repeat="cell in row track by $index"
                     ng-drop="true" ng-drop-success="dropped($event)" ng-drag="true" ng-drag-data="tile"
                     data-id="0" data-img="null" data-deg="0"
                     ng-drag-start="onDragStart($data,$event)" >
                </div>
            </div>
            <div ng-show="false">
            <canvas id="mapa" width="{{ imagem.largura }}" height="{{ imagem.altura }}"></canvas>
            </div>
        </div>
        <div class="col-xs-2 direita">
            <div class="row">
                <div class="col-xs-7">
                    <div class="lixeira" ng-click="limpaTudo()" ng-drop-success="lixo($event)" ng-drop="true">
                        <img src="images/icones/lixeira.svg" />
                    </div>
                </div>
                <div class="col-xs-5">
                    <img class="maos" src="images/icones/tap-2.svg" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button class="btn btn-raised btn-warning" ng-click="sizeChange(true,false)">
                        <img class="arrows" src="images/icones/right-arrow-6.svg" />
                    </button>


                    <button class="btn btn-raised btn-warning" ng-click="sizeChange(false,false)">
                        <img class="arrows" src="images/icones/left-arrow-6.svg" />
                    </button>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <button class="btn btn-raised btn-warning"  ng-click="sizeChange(true,true)">
                        <img class="arrows" src="images/icones/down-arrow-2.svg" />
                    </button>
                    <button class="btn btn-raised btn-warning" ng-click="sizeChange(false,true)">
                        <img class="arrows" src="images/icones/up-arrow-7.svg" />
                    </button>
                </div>
            </div>

        </div>

    </div>

    <div class="row fundo">
        <div class="col-xs-12">
            <a href="#" id="expJ" class="btn btn-raised rosa" download="mapa.json"><img class="arrows" src="images/icones/download-1.svg" /> Exportar </a>
            <label for="impJ" class="btn btn-raised rosa">
                <img class="arrows" src="images/icones/up-arrow-5.svg" /> Importar
            </label>
            <input ng-show="false" type="file" id="impJ" />
            <a href="#" class="btn btn-raised rosa" id="expI"><img class="arrows" src="images/icones/mapa.svg" /> Mapa</a>
        </div>
    </div>


</div>



<script src="js/JQuery/jquery-3.1.0.min.js"></script>
<script src="js/Framework/angular.min.js"></script>
<script src="js/Framework/angular-touch/angular-touch.js"></script>
<script src="js/AngularDnD/ngDraggable.js"></script>
<script src="js/Bootstrap/bootstrap.min.js"></script>
<script src="js/Material/material.min.js"></script>
<script src="js/plugins.js"></script>
<script src="js/main.js"></script>
</body>
</html>
